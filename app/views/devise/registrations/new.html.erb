<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: {class: 'form-sign'}) do |f| %>
    <h2>Sign up</h2>

    <%= devise_error_messages! %>

      <%= f.label :email, class: 'sr-only'  %>
    <%= f.email_field :email, required: true,
                      placeholder: resource.class.human_attribute_name(:email),
                      class: 'form-control top' %>

      <%= f.label :password, class: 'sr-only'  %>
      <%= f.password_field :password, autocomplete: "off", class: 'form-control middle',
                           placeholder: 'Password (8 characters minimum)' %>

      <%= f.label :password_confirmation, class: 'sr-only'  %>
      <%= f.password_field :password_confirmation, autocomplete: "off", class: 'form-control bottom',
                           placeholder: 'Password confirmation' %>

    <%= f.submit 'Sign up', class: %w(btn btn-lg btn-primary btn-block) %>

    <%= render "devise/shared/links" %>

<% end %>

