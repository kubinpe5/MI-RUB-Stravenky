<%= form_for(resource, as: resource_name, url: session_path(resource_name), html: {class: 'form-sign'}) do |f| %>
    <h2>Log in</h2>

    <%= f.label :email, class: 'sr-only' %><br />
    <%= f.email_field :email, autofocus: true, required: true,
                      placeholder: resource.class.human_attribute_name(:email),
                      class: 'form-control top'  %>

    <%= f.label :password, class: 'sr-only' %><br />
    <%= f.password_field :password, autocomplete: "off", required: true,
                         placeholder: 'Password',
                         class: 'form-control bottom'  %>

    <%= f.submit "Log in", class: %w(btn btn-lg btn-primary btn-block) %>
        <%= render "devise/shared/links" %>

    <% end %>

